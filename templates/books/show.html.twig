{% extends 'base.html.twig' %}

{% block title %}Book Details{% endblock %}

{% block body %}
    <div class="container">
        <h1>Book Details</h1>
        <div class="mb-2">
            <a href="{{ path('app_book_edit', { 'id': book.id }) }}" class="btn btn-warning">Edit</a>
            <form action="{{ path('app_book_delete', { 'id': book.id }) }}" method="post" style="display:inline;">
                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ book.id) }}">
                <button class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this book?')">Delete</button>
            </form>
            <a href="{{ path('app_book_index') }}" class="btn btn-secondary">Back to List</a>
        </div>
        <table class="table">
            <tr>
                <th>ID</th>
                <td>{{ book.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ book.title }}</td>
            </tr>
            <tr>
                <th>Author</th>
                <td>{{ book.author }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ book.description }}</td>
            </tr>
            <tr>
                <th>Publication Year</th>
                <td>{{ book.publicationYear }}</td>
            </tr>
            <tr>
                <th>ISBN</th>
                <td>{{ book.isbn }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>
                    {% if book.imagePath %}
                        <img src="{{ book.imagePath }}" alt="{{ book.title }}" style="max-width: 200px;">
                    {% else %}
                        No image available
                    {% endif %}
                </td>
            </tr>
        </table>
    </div>
{% endblock %}
